{
  "name": "media-jams",
  "description": "Empower your Jamstack apps with media practices taught by the experts.",
  "version": "0.0.1",
  "repository": "https://github.com/mediadevelopers/media-jams",
  "author": "MediaDevelopers",
  "main": "next.config.js",
  "scripts": {
    "build": "next build",
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "start": "next start",
    "studio": "cd studio && npm start",
    "docs": "jsdoc -c jsdoc.conf.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext js,mdx",
    "format": "yarn format:index && yarn format:pages && yarn format:src",
    "format:index": "prettier --write \"*.{js,json,md}\"",
    "format:pages": "prettier --write \"pages/**/*.js\"",
    "format:src": "prettier --write \"src/**/*.{js,md,mdx}\""
  },
  "dependencies": {
    "@auth0/nextjs-auth0": "^0.16.0",
    "@chakra-ui/core": "^1.0.0-rc.8",
    "@chakra-ui/theme": "^1.0.0-rc.8",
    "@chakra-ui/theme-tools": "^1.0.0-rc.8",
    "@emotion/core": "^10.0.35",
    "@mdnextjs/components": "^0.2.0",
    "@mdx-js/loader": "^1.6.19",
    "@mdx-js/mdx": "^1.6.19",
    "@mdx-js/react": "^1.6.19",
    "@mdx-js/runtime": "^1.6.19",
    "@next/mdx": "^10.0.0",
    "@sanity/block-content-to-markdown": "^0.0.5",
    "@sanity/client": "^1.150.1",
    "@zeit/next-css": "^1.0.1",
    "cloudinary": "^1.23.0",
    "codemirror": "^5.58.2",
    "css-loader": "^5.0.0",
    "fast-glob": "^3.2.4",
    "fathom-client": "^3.0.0",
    "framer-motion": "^2.6.13",
    "fuse.js": "^6.4.1",
    "gray-matter": "^4.0.2",
    "groq": "^2.0.9",
    "isomorphic-unfetch": "^3.1.0",
    "mixpanel-browser": "^2.39.0",
    "next": "^10.0.1",
    "next-auth": "^3.1.0",
    "next-mdx-remote": "^1.0.0",
    "next-seo": "^4.7.3",
    "prism-react-renderer": "^1.1.1",
    "react": "^16.14.0",
    "react-codemirror2": "^7.2.1",
    "react-dom": "^16.14.0",
    "react-icons": "^3.11.0",
    "react-live": "^2.2.2",
    "remark-mdx-remove-exports": "^1.6.19",
    "remark-mdx-remove-imports": "^1.6.19",
    "use-cloudinary": "^4.0.2"
  },
  "devDependencies": {
    "@babel/helper-validator-option": "^7.12.1",
    "@testing-library/dom": "^7.26.3",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.1.10",
    "babel-jest": "^26.5.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mdx": "^1.8.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.2.5",
    "jest": "^26.5.3",
    "jest-dom": "^4.0.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rewire": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "pages/**/*.js": [
      "prettier --write"
    ],
    "src/**/*.{js,md,mdx}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "keywords": [
    "nextjs",
    "mdx"
  ],
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "license": "ISC"
}
